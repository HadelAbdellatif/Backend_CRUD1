@model Department

<style>
    .department-container {
        background-color: #f4f4f4;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .department-title {
        color: #333;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .department-description {
        color: #666;
        font-size: 18px;
    }
</style>

<div class="department-container">
    <h1 class="department-title">Department Id: @Model.Id</h1>
    <h3 class="department-title">Department Name: @Model.Name</h3>
    <p class="department-description">Department Description: @Model.Description</p>
</div>