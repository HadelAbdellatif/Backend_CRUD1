@model List<Department>

<a href="/Department/Create" class="btn btn-warning">Add</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Department Name</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
            <th scope="col">Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a href="/Department/Details/@item.Id">Details</a>
                </td>
                <td>
                    <a href="/Department/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>